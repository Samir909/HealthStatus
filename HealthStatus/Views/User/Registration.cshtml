<body>
    
          

            <form  action="/User/Registration" method="post" >
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input required
                           type="text"
                           class="form-control"
                           id="exampleInputEmail1"
                           name="Eamil" />
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input required
                           type="password"
                           class="form-control"
                           name="Password" />
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input required
                           type="password"
                           class="form-control"
                           id="confirmPassword"
                           name="confirmPassword" />
                </div>
                <button  class="btn btn-primary">Submit</button>
                <p class="options">
                    Already Have an account
                    <a href="@Url.Action("Login","User")" style="text-decoration:none;" <span onclick="handleLoginclick()" class="spanClick">Login</span></a>
                </p>
            </form>
       
